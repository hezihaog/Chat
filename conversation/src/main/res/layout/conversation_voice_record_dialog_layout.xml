<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/base_dimen_200"
        android:layout_height="@dimen/base_dimen_200"
        android:layout_gravity="center"
        android:background="@drawable/conversation_bg_voice_dialog"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/state_image"
            android:layout_width="@dimen/base_dimen_100"
            android:layout_height="@dimen/base_dimen_100"
            android:layout_gravity="center"
            android:src="@drawable/conversation_voice_anim_decibel"
            tools:src="@drawable/conversation_voice_volume_5" />

        <TextView
            android:id="@+id/state_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/base_dimen_5"
            android:layout_marginTop="@dimen/base_dimen_15"
            android:layout_marginEnd="@dimen/base_dimen_5"
            android:layout_marginBottom="@dimen/base_dimen_5"
            android:gravity="center"
            android:paddingTop="@dimen/base_dimen_10"
            android:paddingBottom="@dimen/base_dimen_10"
            android:textColor="@android:color/white"
            android:textSize="@dimen/base_dimen_sp_16"
            tools:background="@drawable/conversation_bg_voice_cancel"
            tools:text="@string/conversation_voice_dialog_up_cancel" />
    </LinearLayout>
</FrameLayout>