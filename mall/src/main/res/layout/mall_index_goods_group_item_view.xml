<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View style="@style/base_divider" />

    <TextView
        android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base_gray3"
        android:gravity="center"
        android:paddingTop="@dimen/base_dimen_15"
        android:paddingBottom="@dimen/base_dimen_15"
        android:textColor="@color/base_green3"
        tools:text="@string/mall_goods_group_hot" />

    <View style="@style/base_divider" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never" />
</LinearLayout>