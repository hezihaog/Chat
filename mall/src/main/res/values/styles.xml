<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mall_goods_sort_segment_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/base_dimen_6</item>
        <item name="android:paddingBottom">@dimen/base_dimen_6</item>
        <item name="android:textSize">@dimen/base_dimen_sp_14</item>
    </style>

    <style name="mall_user_address_edit_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/base_dimen_15</item>
        <item name="android:layout_marginTop">@dimen/base_dimen_10</item>
        <item name="android:layout_marginEnd">@dimen/base_dimen_15</item>
        <item name="android:layout_marginBottom">@dimen/base_dimen_10</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="mall_user_address_edit_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textSize">@dimen/base_dimen_sp_14</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="mall_user_address_edit_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/base_dimen_15</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@null</item>
        <item name="android:paddingStart">@dimen/base_dimen_5</item>
        <item name="android:paddingTop">@dimen/base_dimen_5</item>
        <item name="android:paddingEnd">@dimen/base_dimen_5</item>
        <item name="android:paddingBottom">@dimen/base_dimen_5</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:textSize">@dimen/base_dimen_sp_14</item>
    </style>

    <style name="mall_circular_angle_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/base_dimen_15</item>
        <item name="android:layout_marginTop">@dimen/base_dimen_10</item>
        <item name="android:layout_marginEnd">@dimen/base_dimen_15</item>
        <item name="android:layout_marginBottom">@dimen/base_dimen_10</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/base_dimen_10</item>
        <item name="android:paddingBottom">@dimen/base_dimen_10</item>
    </style>

    <style name="mall_green_circular_angle_btn" parent="@style/mall_circular_angle_btn">
        <item name="android:textColor">@color/base_white</item>
        <item name="android:background">@drawable/mall_bg_circular_angle_btn</item>
    </style>

    <style name="mall_gray_hollow_circular_angle_btn" parent="@style/mall_circular_angle_btn">
        <item name="android:textColor">@color/base_gray4</item>
        <item name="android:background">@drawable/mall_bg_hollow_circular_angle_btn</item>
    </style>
</resources>