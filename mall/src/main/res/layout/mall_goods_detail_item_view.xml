<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white"
    android:orientation="vertical">

    <com.zhpan.bannerview.BannerViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_dimen_300"
        tools:background="@color/base_green3" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_dimen_10"
        android:layout_marginTop="@dimen/base_dimen_5"
        android:layout_marginEnd="@dimen/base_dimen_10"
        android:lineSpacingMultiplier="1.2"
        android:textColor="@color/base_black"
        android:textSize="@dimen/base_dimen_sp_15"
        tools:text=" HUAWEI Mate 30 Pro 双4000万徕卡电影四摄 " />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_dimen_10"
        android:layout_marginTop="@dimen/base_dimen_5"
        android:layout_marginEnd="@dimen/base_dimen_10"
        android:lineSpacingMultiplier="1.2"
        android:text="@string/mall_courier_info"
        android:textColor="@color/base_gray4"
        android:textSize="@dimen/base_dimen_sp_14" />

    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_dimen_10"
        android:layout_marginTop="@dimen/base_dimen_5"
        android:layout_marginEnd="@dimen/base_dimen_10"
        android:maxLines="1"
        android:textColor="@color/base_red"
        android:textSize="@dimen/base_dimen_sp_15"
        tools:text="¥5399" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_dimen_10"
        android:layout_marginTop="@dimen/base_dimen_5"
        android:layout_marginEnd="@dimen/base_dimen_10"
        android:layout_marginBottom="@dimen/base_dimen_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="概述"
            android:textColor="@color/base_black"
            android:textSize="@dimen/base_dimen_sp_13" />

        <View
            style="@style/base_divider"
            android:layout_width="@dimen/base_dimen_1"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="参数"
            android:textColor="@color/base_black"
            android:textSize="@dimen/base_dimen_sp_13" />

        <View
            style="@style/base_divider"
            android:layout_width="@dimen/base_dimen_1"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="安装服务"
            android:textColor="@color/base_black"
            android:textSize="@dimen/base_dimen_sp_13" />

        <View
            style="@style/base_divider"
            android:layout_width="@dimen/base_dimen_1"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="常见问题"
            android:textColor="@color/base_black"
            android:textSize="@dimen/base_dimen_sp_13" />
    </LinearLayout>
</LinearLayout>