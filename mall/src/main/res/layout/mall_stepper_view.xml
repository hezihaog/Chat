<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/decrement"
        android:layout_width="@dimen/base_dimen_30"
        android:layout_height="@dimen/base_dimen_30"
        android:background="@color/base_gray5"
        android:gravity="center"
        android:text="--"
        android:textColor="@color/base_black"
        android:textSize="@dimen/base_dimen_sp_15" />

    <TextView
        android:id="@+id/value"
        android:layout_width="@dimen/base_dimen_30"
        android:layout_height="@dimen/base_dimen_30"
        android:layout_marginStart="@dimen/base_dimen_2"
        android:layout_marginEnd="@dimen/base_dimen_2"
        android:background="@color/base_gray5"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/base_black"
        android:textSize="@dimen/base_dimen_sp_15" />

    <TextView
        android:id="@+id/increase"
        android:layout_width="@dimen/base_dimen_30"
        android:layout_height="@dimen/base_dimen_30"
        android:background="@color/base_gray5"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/base_black"
        android:textSize="@dimen/base_dimen_sp_15" />
</LinearLayout>