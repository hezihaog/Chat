<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/conversation_chat_msg_item_layout_sender">

    <com.gcssloop.widget.RCRelativeLayout style="@style/conversation_msg_item_image_layout_sender">

        <ImageView
            android:id="@+id/image"
            style="@style/conversation_msg_item_image"
            tools:src="@drawable/base_def_img_rect" />
    </com.gcssloop.widget.RCRelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar"
        style="@style/conversation_chat_avatar"
        tools:src="@drawable/base_avatar_round" />
</LinearLayout>