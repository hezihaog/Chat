<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_top_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_10" />

            <LinearLayout style="@style/discovery_main_item_layout">

                <View style="@style/base_divider" />

                <LinearLayout
                    android:id="@+id/moment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/discovery_main_item_icon"
                        android:src="@drawable/discovery_moment" />

                    <TextView
                        style="@style/discovery_main_item_text"
                        android:text="@string/discovery_moment" />
                </LinearLayout>

                <View style="@style/base_divider" />
            </LinearLayout>

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_10" />

            <LinearLayout style="@style/discovery_main_item_layout">

                <View style="@style/base_divider" />

                <LinearLayout
                    android:id="@+id/moment_video_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/discovery_main_item_icon"
                        android:src="@drawable/discovery_moment_video" />

                    <TextView
                        style="@style/discovery_main_item_text"
                        android:text="@string/discovery_moment_video" />
                </LinearLayout>

                <View style="@style/base_divider2" />
            </LinearLayout>

            <LinearLayout style="@style/discovery_main_item_layout">

                <LinearLayout
                    android:id="@+id/moment_mall_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/discovery_main_item_icon"
                        android:src="@drawable/discovery_mall" />

                    <TextView
                        style="@style/discovery_main_item_text"
                        android:text="@string/discovery_mall" />
                </LinearLayout>

                <View style="@style/base_divider" />
            </LinearLayout>

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_10" />

            <LinearLayout style="@style/discovery_main_item_layout">

                <View style="@style/base_divider" />

                <LinearLayout
                    android:id="@+id/add_friend_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/discovery_main_item_icon"
                        android:src="@drawable/discovery_add_friend" />

                    <TextView
                        style="@style/discovery_main_item_text"
                        android:text="@string/discovery_add_friend" />
                </LinearLayout>

                <View style="@style/base_divider2" />

                <LinearLayout
                    android:id="@+id/scan_qrcode_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/discovery_main_item_icon"
                        android:src="@drawable/discovery_scan_qrcode" />

                    <TextView
                        style="@style/discovery_main_item_text"
                        android:text="@string/discovery_scan_qrcode" />
                </LinearLayout>

                <View style="@style/base_divider" />
            </LinearLayout>

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_dimen_10" />

            <LinearLayout style="@style/discovery_main_item_layout">

                <View style="@style/base_divider" />

                <LinearLayout
                    android:id="@+id/todo_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/discovery_main_item_icon"
                        android:src="@drawable/discovery_todo" />

                    <TextView
                        style="@style/discovery_main_item_text"
                        android:text="@string/discovery_todo" />
                </LinearLayout>

                <View style="@style/base_divider" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>