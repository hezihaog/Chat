<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_white">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_dimen_15"
        android:layout_marginTop="@dimen/base_dimen_5"
        android:layout_marginEnd="@dimen/base_dimen_15"
        android:layout_marginBottom="@dimen/base_dimen_5"
        android:background="@drawable/mall_bg_segment"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mall_recommend"
            style="@style/mall_goods_sort_segment_btn"
            android:background="@drawable/mall_bg_segment_select"
            android:text="@string/mall_recommend"
            android:textColor="@color/base_white" />

        <View
            android:layout_width="@dimen/base_dimen_1"
            android:layout_height="match_parent"
            android:background="@color/base_green3" />

        <TextView
            android:id="@+id/mall_new"
            style="@style/mall_goods_sort_segment_btn"
            android:text="@string/mall_new"
            android:textColor="@color/base_green3"
            android:textSize="@dimen/base_dimen_sp_14" />

        <View
            android:layout_width="@dimen/base_dimen_1"
            android:layout_height="match_parent"
            android:background="@color/base_green3" />

        <TextView
            android:id="@+id/mall_price"
            style="@style/mall_goods_sort_segment_btn"
            android:text="@string/mall_price"
            android:textColor="@color/base_green3"
            android:textSize="@dimen/base_dimen_sp_14" />
    </LinearLayout>
</FrameLayout>