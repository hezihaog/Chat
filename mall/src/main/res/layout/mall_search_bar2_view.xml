<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mall_bg_search_bar2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_dimen_15"
            android:layout_marginTop="@dimen/base_dimen_8"
            android:layout_marginBottom="@dimen/base_dimen_8"
            android:src="@drawable/mall_search_icon" />

        <EditText
            android:id="@+id/input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/base_dimen_5"
            android:layout_marginEnd="@dimen/base_dimen_15"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/base_search_hint"
            android:maxLines="1"
            android:textColor="@color/base_black"
            android:textColorHint="@color/base_gray4"
            android:textSize="@dimen/base_dimen_sp_13" />
    </LinearLayout>
</LinearLayout>